<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main> 
        <% if(emailErrorMessage.length > 0){ %>
        <div class="user-message user-message--error"><%= emailErrorMessage %> </div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%= errorStyle === "emailError" ? "invalid" : "" %>"
                type="text" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errorStyle === "passwordError" ? "invalid" : "" %>" 
                type="password" name="password" id="password">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input class="<%= errorStyle === "confirmPasswordError" ? "invalid" : "" %>"
                type="password" name="confirmPassword" id="confirmPassword">
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>